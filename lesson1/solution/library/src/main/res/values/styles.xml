<resources>

  <style name="TextAppearance.App.ButtonNormal" parent="">
    <item name="fontFamily">@font/rubik_medium</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
    <item name="android:textSize">16sp</item>
    <item name="lineHeight">24sp</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="cornerRadius">64dp</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="backgroundTint">@color/button_filled_tint</item>
    <item name="android:textAppearance">@style/TextAppearance.App.ButtonNormal</item>
    <item name="android:textColor">@color/button_filled_text</item>
    <item name="iconTint">@color/button_filled_text</item>
    <item name="iconPadding">8dp</item>
  </style>

  <style name="Widget.App.Button.Outlined">
    <item name="backgroundTint">@color/button_outlined_tint</item>
    <item name="strokeColor">@color/button_outlined_stroke_tint</item>
    <item name="strokeWidth">1dp</item>
    <item name="android:textColor">@color/button_outlined_text</item>
    <item name="iconTint">@color/button_outlined_text</item>
  </style>
</resources>
