<resources>

  <style name="TextAppearance.App.ButtonNormal" parent="">
    <item name="fontFamily">@font/rubik_medium</item>
    <item name="android:fontFamily">@font/rubik_medium</item>
    <item name="android:textSize">16sp</item>
    <item name="lineHeight">24sp</item>
    <item name="android:letterSpacing">0.02</item>
    <item name="textAllCaps">false</item>
  </style>

  <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
    <item name="android:paddingStart">24dp</item>
    <item name="android:paddingEnd">24dp</item>
    <item name="android:insetTop">0dp</item>
    <item name="android:insetBottom">0dp</item>
    <item name="cornerRadius">64dp</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="backgroundTint">@color/purple_500</item>
    <item name="android:textAppearance">@style/TextAppearance.App.ButtonNormal</item>
    <item name="android:textColor">@color/white_a90</item>
    <item name="iconTint">@color/white_a90</item>
    <item name="iconPadding">8dp</item>
  </style>
</resources>
